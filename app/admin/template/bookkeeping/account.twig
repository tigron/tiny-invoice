{% extends "_default/layout.base.twig" %}

{% import '_default/macro.base.twig' as base %}

{% block content %}

	{% if action == 'add' %}

		<ol class="breadcrumb">
			<li><a href="/">{% trans "Home" %}</a></li>
			<li><a href="/administrative/bookkeeping_account">{% trans "Bookkeeping Accounts" %}</a></li>
			<li class="active">{% trans "Add bookkeeping account" %}</li>
		</ol>

		{% if errors is defined %}
		<div class="alert alert-danger">
			{% trans "The form contains mistakes. Please correct them." %}
		</div>
		{% endif %}

		<form class="form form-horizontal form-condensed" method="post" action="/bookkeeping/account?action=add">
			<div class="card">
				<div class="card-header">
					{% trans "Details" %}
				</div>
				<div class="card-body">
					<div class="row mb-3 {% if 'number' in errors|keys %} has-error{% endif %}">
						<label class="col-form-label col-3 text-end">{% trans "Number" %}</label>
						<div class="col-5"><input type="text" name="bookkeeping_account[number]" class="form-control" value="{{ env.post.bookkeeping_account.number }}"/></div>
					</div>

					<div class="row mb-3">
						<label class="col-form-label col-3 text-end">{% trans "Name" %}</label>
						<div class="col-5"><input type="text" name="bookkeeping_account[name]" class="form-control" value="{{ env.post.bookkeeping_account.name }}"/></div>
					</div>

					<div class="row mb-3">
						<div class="col-3 offset-3">
							<button class="btn btn-primary">
								{% trans "Save" %}
							</button>
						</div>
					</div>

				</div>
			</div>
		</form>

	{% else %}

		<ol class="breadcrumb">
			<li><a href="/">{% trans "Home" %}</a></li>
			<li class="active">{% trans "Bookkeeping Accounts" %}</li>
		</ol>

		<div class="card">
			<div class="card-header">
				{% trans "Filter" %}
			</div>
			<div class="card-body">
				<form method="post" action="/bookkeeping/account" class="form-horizontal">
					<div class="row mb-3">
						<label class="col-form-label col-3 text-end">{% trans "Search" %}</label>
						<div class="col-5">
							<input type="text" name="search" class="form-control" value="{{ pager.get_search() }}">
						</div>
					</div>
					<div class="row mb-3">
						<div class="col-3 offset-3">
							<button class="btn btn-primary">
								{% trans "Search" %}
							</button>
						</div>
					</div>
				</form>
			</div>
		</div>

		{% if env.sticky_session.message is defined %}
			{{ base.display_flash_message(env.sticky_session.message, 'bookkeeping_account') }}
		{% endif %}

		<div class="card">
			<div class="card-header">
				<div class="pull-right">
					<a href="/bookkeeping/account?action=add" title="">
						<i data-feather="plus"></i>
						{% trans "Add bookkeeping_account" %}
					</a>
				</div>
				{{ base.pager_count(pager.item_count) }}
			</div>
			<div class="card-body">
			{% for bookkeeping_account in pager.items %}
			{% if loop.first %}
				<table class="table table-hover table-striped table-condensed table-responsive">
				<thead>
					<tr>
						<th>{{ pager.create_header('Number'|trans, 'number')|raw }}</th>
						<th>{{ pager.create_header('Name'|trans, 'name')|raw }}</th>
						<th width="20">&nbsp;</th>
					</tr>
				</thead>
				<tbody>
			{% endif %}

			<tr>
				<td>{{ bookkeeping_account.number }}</td>
				<td>{{ bookkeeping_account.name }}</td>
				<td>
					<a href="/bookkeeping/account/detail?id={{ bookkeeping_account.id }}" title="">
						<i data-feather="edit"></i>
					</a>
				</td>
			</tr>

			{% if loop.last %}
				</tbody>
				</table>

				{{ pager.links|raw }}
			{% endif %}

			{% else %}

				<p><em>{% trans "No bookkeeping_accounts found." %}</em></p>

			{% endfor %}
			</div>
		</div>

	{% endif %}

{% endblock content %}
