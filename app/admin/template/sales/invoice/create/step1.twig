<div class="row">
	<div class="col">
		<h4>{% trans "Invoices" %}</h4>
	</div>
	<div class="col">
		<div class="float-end">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item">
						<a href="/sales/invoice">
							{% trans "Invoices" %}
						</a>
					</li>
					<li class="breadcrumb-item active">
						{% trans "Create new invoice" %}
					</li>
				</ol>
			</nav>
		</div>
	</div>
</div>

{% if errors is defined %}
	<div class="alert alert-danger">
		{% trans "Please select a customer." %}
	</div>
{% endif %}

<div class="card">
	<div class="card-header">
		{% trans "Select customer" %}
	</div>
	<div class="card-body">
		<form method="post" action="/sales/invoice?action=create_step1" class="form-horizontal" id="invoice-create-step1">
			<div class="mb-3">
				<label class="col-xs-3 form-label">{% trans "Customer" %}</label>
				<select name="customer_id" class="form-select autocomplete_customer"></select>
			</div>

			<div class="form-group">
				<div class="col-xs-3 col-xs-offset-3">
					<button class="btn btn-primary">
						{% trans "Next" %}
					</button>
				</div>
			</div>
		</form>
	</div>
</div>

<script type="text/javascript">
$('.autocomplete_customer').select2({
	theme: "bootstrap-5",
	ajax: {
		url: '/administrative/customer?action=ajax_search',
		dataType: 'json'
    // Additional AJAX parameters go here; see the end of this chapter for the full code of this example
	}
});
</script>
