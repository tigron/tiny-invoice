<div class="row">
	<div class="col">
		<h4>{% trans "Invoices" %}</h4>
	</div>
	<div class="col">
		<div class="float-end">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item">
						<a href="/sales/invoice">
							{% trans "Invoices" %}
						</a>
					</li>
					<li class="breadcrumb-item active">
						{% trans "Create new invoice" %}
					</li>
				</ol>
			</nav>
