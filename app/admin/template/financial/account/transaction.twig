{% extends "_default/layout.base.twig" %}

{% block content %}
	{% if action == 'edit' %}
		<ol class="breadcrumb">
			<li><a href="/">{% trans "Home" %}</a></li>
			<li><a href="/financial/account">{% trans "Bank accounts" %}</a></li>
			<li><a href="/financial/account/transaction?id={{ transaction.bank_account_statement.bank_account_id }}">{% trans "Edit Bank Account" %}</a></li>
			<li class="active">{% trans "Edit transaction" %}</li>
		</ol>

		<form class="form-horizontal form-condensed">
		<div class="panel panel-default">
			<div class="panel-heading">
				{% trans "Transaction details" %}

				<span class="pull-right">
					<a href="/setting/extractor/transaction?action=add&transaction_id={{ transaction.id }}">
						<i class="fa fa-file-text" aria-hidden="true"></i> {% trans "Create extractor" %}
					</a>
				</span>
			</div>
			<div class="panel-body">
				<div class="form-group">
					<label class="col-xs-3 control-label">{% trans "Transaction ID" %}</label>
					<div class="col-xs-9"><p class="form-control-static">{{ transaction.id }}</p></div>
				</div>

				<div class="form-group">
					<label class="col-xs-3 control-label">{% trans "Date" %}</label>
					<div class="col-xs-9"><p class="form-control-static">{{ transaction.date|date }}</p></div>
				</div>

				<div class="form-group">
					<label class="col-xs-3 control-label">{% trans "Bank account" %}</label>
					<div class="col-xs-9"><p class="form-control-static">{{ transaction.bank_account_statement.bank_account.number }}</p></div>
				</div>

				<div class="form-group">
					<label class="col-xs-3 control-label">{% trans "Bank Account Statement" %}</label>
					<div class="col-xs-9"><p class="form-control-static">{{ transaction.bank_account_statement.sequence }}</p></div>
				</div>

				<div class="form-group">
					<label class="col-xs-3 control-label">{% trans "To" %}/{% trans "From" %}</label>
					<div class="col-xs-9"><p class="form-control-static">{{ transaction.other_account_name }}</p></div>
				</div>

				<div class="form-group">
					<label class="col-xs-3 control-label">{% trans "To" %}/{% trans "From" %} {% trans "Account" %}</label>
					<div class="col-xs-9"><p class="form-control-static">{{ transaction.other_account_number }}</p></div>
				</div>

				<div class="form-group">
					<label class="col-xs-3 control-label">{% trans "Amount" %}</label>
					<div class="col-xs-9"><p class="form-control-static">&euro;{{ transaction.amount }}</p></div>
				</div>

				<div class="form-group">
					<label class="col-xs-3 control-label">{% trans "Balance" %}</label>
					<div class="col-xs-9"><p class="form-control-static">&euro;{{ transaction.get_balance() }}</p></div>
				</div>

				<div class="form-group">
					<label class="col-xs-3 control-label">{% trans "Message" %}</label>
					<div class="col-xs-9"><p class="form-control-static">{{ transaction.get_message() }}</p></div>
				</div>
			</div>
		</div>
		</form>
		{% include "financial/account/transaction/modal.outgoing_invoice.twig" with {id: 'modal_outgoing_invoice', modal_size: 'lg'} %}
		{% include "financial/account/transaction/modal.incoming_invoice.twig" with {id: 'modal_incoming_invoice', modal_size: 'lg'} %}
		{% include "financial/account/transaction/modal.bookkeeping_account.twig" with {id: 'modal_bookkeeping_account', modal_size: 'lg'} %}

		<div class="panel panel-default">
			<div class="panel-heading">
				{% trans "Bookings" %}
				<div class="pull-right dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">{% trans "Add booking" %} <b class="caret"></b></a>
					<ul class="dropdown-menu multi-level">
						<li>
							<a href="#modal_outgoing_invoice" data-toggle="modal">
								<i class="fa fa-arrow-up"></i> {% trans "Outgoing invoice" %}
							</a>
						</li>

						<li>
							<a href="#modal_incoming_invoice" data-toggle="modal">
								<i class="fa fa-arrow-down"></i> {% trans "Incoming invoice" %}
							</a>
						</li>

						<li>
							<a href="#modal_bookkeeping_account" data-toggle="modal">
								<i class="fa fa-book"></i> {% trans "Bookkeeping account" %}
							</a>
						</li>



					</ul>
				</div>
			</div>
			<div class="panel-body">
				{% if transaction.balanced %}
					<div class="alert alert-success">
						{% trans "This transaction is correctly linked." %}
					</div>
				{% endif %}
				{% set balances = transaction.get_bank_account_statement_transaction_balances() %}

				{% if not transaction.balanced %}
					<div class="alert alert-danger">{% trans "This transaction is not booked yet" %}</div>
				{% endif %}

				{% for balance in balances %}
					{% if loop.first %}
						<table class="table table-hover table-alternate">
						<thead>
							<tr>
								<th>{% trans "Type" %}</th>
								<th>{% trans "Amount" %}</th>
							</tr>
						</thead>
						<tbody>
						<tr>
							<td>{% trans "Payment" %} {{ transaction.id }}</td>
							<td>&euro;{{ transaction.amount }}</td>
						</tr>
					{% endif %}

					<tr>
						<td>
							{% if balance.linked_object_classname == 'Document_Incoming_Invoice' %}
								<a href="/administrative/document/invoice?action=edit&id={{ balance.linked_object_id }}">
									{% trans "Incoming invoice" %} {{ balance.linked_object_id }} ({{ balance.get_linked_object().supplier.company }})
								</a>
							{% elseif balance.linked_object_classname == 'Invoice' %}
								<a href="/sales/invoice?action=edit&id={{ balance.linked_object_id }}">
									{% trans "Invoice" %} {{ balance.linked_object_id }}
								</a>
							{% elseif balance.linked_object_classname == 'Bookkeeping_Account' %}
								<a href="/bookkeeping/account?action=edit&id={{ balance.linked_object_id }}">
									{% trans "Bookkeeping account" %} {{ balance.get_linked_object().number }} - {{ balance.get_linked_object().name }}
								</a>
							{% else %}
								{{ balance.linked_object_classname }} {{ balance.linked_object_id }}
							{% endif %}
						</td>
						<td>
							&euro;{{ balance.amount*-1 }}
						</td>
					</tr>

					{% if loop.last %}
						{% if balances|length > 0 %}
							<tr>
								<th>{% trans "Balance" %}</th>
								<th>&euro;{{ transaction.get_balance() }}</th>
							</tr>
						{% endif %}
						</tbody>
						</table>
					{% endif %}
				{% endfor %}

			</div>
		</div>
	{% elseif action == 'batch_link' %}

		<ol class="breadcrumb">
			<li><a href="/">{% trans "Home" %}</a></li>
			<li><a href="/financial/account">{% trans "Bank accounts" %}</a></li>
			<li class="active">{% trans "Batch link" %}</li>
		</ol>

		<div class="row">
			<div class="col-xs-4">
				<h4>{% trans "Unbalanced transaction" %}</h4>
				<form class="form-horizontal form-condensed">
				<div class="panel panel-default">
					<div class="panel-heading">
						{% trans "Transaction details" %}
					</div>
					<div class="panel-body">
						<div class="form-group">
							<label class="col-xs-4 control-label">{% trans "Transaction ID" %}</label>
							<div class="col-xs-8"><p class="form-control-static">{{ transaction.id }}</p></div>
						</div>

						<div class="form-group">
							<label class="col-xs-4 control-label">{% trans "Date" %}</label>
							<div class="col-xs-8"><p class="form-control-static">{{ transaction.date|date }}</p></div>
						</div>

						<div class="form-group">
							<label class="col-xs-4 control-label">{% trans "Bank account" %}</label>
							<div class="col-xs-8"><p class="form-control-static">{{ transaction.bank_account_statement.bank_account.number }}</p></div>
						</div>

						<div class="form-group">
							<label class="col-xs-4 control-label">{% trans "Bank Account Statement" %}</label>
							<div class="col-xs-8"><p class="form-control-static">{{ transaction.bank_account_statement.sequence }}</p></div>
						</div>

						<div class="form-group">
							<label class="col-xs-4 control-label">{% trans "To" %}/{% trans "From" %}</label>
							<div class="col-xs-8"><p class="form-control-static">{{ transaction.other_account_name }}</p></div>
						</div>

						<div class="form-group">
							<label class="col-xs-4 control-label">{% trans "To" %}/{% trans "From" %} {% trans "Account" %}</label>
							<div class="col-xs-8"><p class="form-control-static">{{ transaction.other_account_number }}</p></div>
						</div>

						<div class="form-group">
							<label class="col-xs-4 control-label">{% trans "Amount" %}</label>
							<div class="col-xs-8"><p class="form-control-static">&euro;{{ transaction.amount }}</p></div>
						</div>

						<div class="form-group">
							<label class="col-xs-4 control-label">{% trans "Balance" %}</label>
							<div class="col-xs-8"><p class="form-control-static">&euro;{{ transaction.get_balance() }}</p></div>
						</div>

						<div class="form-group">
							<label class="col-xs-4 control-label">{% trans "Message" %}</label>
							<div class="col-xs-8"><p class="form-control-static">{{ transaction.get_message() }}</p></div>
						</div>
					</div>
				</div>
				</form>



			</div>

			<div class="col-xs-8">
				<h4>{% trans "Possible matches" %}</h4>
				<div class="row">
				{% set possible_matches = transaction.get_possible_matches %}
				{% for match in possible_matches.document_incoming_invoice %}
					<div class="col-xs-6">
						<form action="/financial/account/transaction?action=batch_link&transaction_id={{ transaction.id }}" method="post">
						<input type="hidden" name="classname" value="document_incoming_invoice" />
						<input type="hidden" name="object_id" value="{{ match.id }}" />
						<input type="hidden" name="transaction_id" value="{{ transaction.id }}" />
						<div class="panel panel-default match">
							<div class="panel-heading">
								{% trans "Incoming invoice" %} {{ match.id }}

								<div class="pull-right hide">
									<button class="btn btn-xs btn-primary pull-right" type="submit">{% trans "Link transaction" %}</button>
								</div>
							</div>
							<div class="panel-body">
								<dl class="dl-horizontal">
									<dt>{% trans "Name" %}</dt>
									<dd>{{ match.title }}</dd>

									<dt>{% trans "Date" %}</dt>
									<dd>{{ match.date|date }}</dd>

									<dt>{% trans "Supplier" %}</dt>
									<dd>{{ match.supplier.company }}</dd>

									<dt>{% trans "Price" %}</dt>
									<dd>&euro;{{ match.price_incl }}</dd>

									<dt>{% trans "Message" %}</dt>
									<dd>
									{% if match.payment_message != '' %}{{ match.payment_message }}{% else %}{{ match.payment_structured_message }}{% endif %}
									</dd>

									<dt>{% trans "Paid" %}</dt>
									<dd>{% if match.paid %}<span class="label label-success">{% trans "Yes" %}</span>{% else %}<span class="label label-danger">{% trans "No" %}</span>{% endif %}</dd>
								</dl>

								<button class="btn btn-primary hide" type="submit">{% trans "Link transaction" %}</button>
							</div>
						</div>
						</form>
					</div>
				{% endfor %}

				{% for match in possible_matches.supplier %}
					<div class="col-xs-6">
						<form action="/financial/account/transaction?action=batch_link&transaction_id={{ transaction.id }}" method="post">
						<input type="hidden" name="classname" value="supplier" />
						<input type="hidden" name="object_id" value="{{ match.id }}" />
						<input type="hidden" name="transaction_id" value="{{ transaction.id }}" />
						<div class="panel panel-default match">
							<div class="panel-heading">
								{% trans "Supplier" %} {{ match.id }}
								<div class="pull-right hide">
									<button class="btn btn-xs btn-primary pull-right" type="submit">{% trans "Link transaction" %}</button>
								</div>
							</div>
							<div class="panel-body">
								<dl class="dl-horizontal">
									<dt>{% trans "Name" %}</dt>
									<dd>{{ match.company }}</dd>

									<dt>{% trans "IBAN" %}</dt>
									<dd>{{ match.iban }}</dd>
								</dl>


							</div>
						</div>
						</form>
					</div>
				{% endfor %}

				{% for match in possible_matches.bookkeeping_account %}
					<div class="col-xs-6">
						<form action="/financial/account/transaction?action=batch_link&transaction_id={{ transaction.id }}" method="post">
						<input type="hidden" name="classname" value="bookkeeping_account" />
						<input type="hidden" name="object_id" value="{{ match.id }}" />
						<input type="hidden" name="transaction_id" value="{{ transaction.id }}" />
						<div class="panel panel-default match">
							<div class="panel-heading">
								{% trans "Bookkeeping Account" %} {{ match.id }}
								<div class="pull-right hide">
									<button class="btn btn-xs btn-primary pull-right" type="submit">{% trans "Link transaction" %}</button>
								</div>
							</div>
							<div class="panel-body">
								<dl class="dl-horizontal">
									<dt>{% trans "Number" %}</dt>
									<dd>{{ match.number }}</dd>

									<dt>{% trans "Name" %}</dt>
									<dd>{{ match.name }}</dd>
								</dl>


							</div>
						</div>
						</form>
					</div>
				{% endfor %}

				<div class="col-xs-6">
					<form action="/financial/account/transaction?action=batch_link&transaction_id={{ transaction.id }}&start={{ transaction.id }}" method="post">
					<div class="panel panel-default match">
						<div class="panel-heading">
							{% trans "Skip transaction" %}
							<div class="pull-right hide">
								<button class="btn btn-xs btn-primary pull-right" type="submit">{% trans "Skip" %}</button>
							</div>
						</div>
						<div class="panel-body">
							<p><strong>{% trans "Skip this transaction and proceed." %}</strong></p>
							<p>{% trans "Please use this option if no possible matches can be found or if the available options are incorrect." %}</p>


						</div>
					</div>
					</form>
				</div>

				</div>
			</div>
		</div>

		<script type="text/javascript">
			$('.match').on('click', function() {
				$('.match .pull-right').addClass('hide');
				$('.match').removeClass('panel-primary');
				$(this).find('.pull-right').removeClass('hide');
				$(this).addClass('panel-primary');
			});


		</script>


	{% elseif action == 'automatic_link' %}
		<ol class="breadcrumb">
			<li><a href="/">{% trans "Home" %}</a></li>
			<li><a href="/financial/account">{% trans "Bank accounts" %}</a></li>
			<li class="active">{% trans "Automatic link" %}</li>
		</ol>
		<div class="form-horizontal">
		{% for transaction in transactions %}
			{% if loop.first %}
				<table class="table table-alternate table-hover">
					<thead>
						<tr>
							<th width="120"><input type="checkbox" data-group-cls="btn-group-xs" onchange="toggle_all();"></th>
							<th>{{ pager.create_header('Date'|trans, 'date')|raw }}</th>
							<th>{{ pager.create_header('Amount'|trans, 'amount')|raw }}</th>
							<th width="40%">{{ pager.create_header('Message'|trans, 'message')|raw }}</th>
							<th>{{ pager.create_header('To/From'|trans, 'other_account_name')|raw }}</th>
							<th width="30">&nbsp;</th>
						</tr>
					</thead>
					<tbody>
			{% endif %}

			<tr data-price="{{ transaction.amount }}" data-id="{{ transaction.id }}">
				<td><input type="checkbox" data-group-cls="btn-group-xs" onchange="calculate_sum();"/></td>
				<td>{{ transaction.date|date }}</td>
				<td>{{ transaction.amount }}</td>
				<td>{{ transaction.get_message() }}</td>
				<td>{{ transaction.other_account_name }}</td>
				<td class="status"></td>
			</tr>

			{% if loop.last %}
					</tbody>
				</table>
				<div class="well">
					<div class="form-group">
						<label class="col-xs-3 control-label">{% trans "Total amount" %}</label>
						<div class="col-xs-9">
							<p class="form-control-static" id="total_amount">&euro;0</p>
						</div>
					</div>

					<div class="form-group">
						<div class="col-xs-9 col-xs-offset-3">
							<button type="submit" class="btn btn-primary" id="btn_automatic_link" onclick="automatic_link();">
								{% trans "Link transactions" %}
							</button>
						</div>
					</div>

				</div>
			{% endif %}
		{% endfor %}
		</div>
		<script type="text/javascript">
			function toggle_all() {
				if ($('th input[type=checkbox]').is(':checked')) {
					$('td input[type=checkbox]').prop('checked', true);
				} else {
					$('td input[type=checkbox]').prop('checked', false);
				}
			}

			function calculate_sum() {
				total = 0;
				$('tbody tr').each(function() {
					if ( $(this).find('input[type=checkbox]').is(':checked') ){
						total += Math.round( parseFloat( $(this).data('price') ) * 100) / 100;
					}
				});
				$('#total_amount').html('&euro;' + Math.round(total*100)/100 );
			}

			function automatic_link() {
				$("#btn_automatic_link").attr("disabled", true);
				$('tbody tr').each(function() {
					if ( $(this).find('input[type=checkbox]').is(':checked') ){
						id = $(this).data('id');

						data = {
							id: id
						};

						$.post('/financial/account/transaction?action=automatic_link_transaction', data, function(data) {
							if (data.success) {
								$('tr[data-id=' + data.id + ']').find('.status').html('<i class="fa fa-check"></i>');
							} else {
								$('tr[data-id=' + data.id + ']').find('.status').html('<a href="#" title="' + data.message + '"><span class="glyphicon glyphicon-remove"></span></a>');
							}
						}, 'json');

					}
				});
			}
		</script>
	{% else %}
		<ol class="breadcrumb">
			<li><a href="/">{% trans "Home" %}</a></li>
			<li><a href="/financial/account">{% trans "Bank accounts" %}</a></li>
			<li>{% trans "Edit Bank Account" %}</li>
		</ol>

		{% include "financial/account/tabs.twig" %}

		<div class="panel panel-default">
			<div class="panel-heading">
				{% trans "Filter" %}
			</div>
			<div class="panel-body">
				<form method="post" action="/financial/account/transaction?id={{ bank_account.id }}" class="form-horizontal">
					<div class="form-group">
						<label class="col-xs-3 control-label">{% trans "Search" %}</label>
						<div class="col-xs-9">
							<input type="text" name="search" class="form-control" value="{{ pager.get_search() }}">
						</div>
					</div>
					{% set conditions = pager.get_conditions() %}

					<div class="form-group">
						<label class="col-xs-3 control-label">{% trans "Bank Account Statement" %}</label>
						<div class="col-xs-9">
							<select name="bank_account_statement" class="form-control">
								<option value="-1">{% trans "All" %}</option>
								{% for bank_account_statement in bank_account.get_bank_account_statements() %}
									<option value="{{ bank_account_statement.id }}" {% if pager.has_condition('bank_account_statement_transaction.bank_account_statement_id', bank_account_statement.id) %}selected{% endif %}>
										{{ bank_account_statement.date|date }} {{ bank_account_statement.sequence }}
									</option>
								{% endfor %}
							</select>
						</div>
					</div>

					<div class="form-group">
						<label class="col-xs-3 control-label">{% trans "Balanced" %}</label>
						<div class="col-xs-9">
							<select name="balanced" class="form-control">
								<option value="-1">{% trans "Any" %}</option>
								<option value="0" {% if pager.has_condition('bank_account_statement_transaction.balanced', 0) %}selected{% endif %}>{% trans "No" %}</option>
								<option value="1" {% if pager.has_condition('bank_account_statement_transaction.balanced', 1) %}selected{% endif %}>{% trans "Yes" %}</option>
							</select>
						</div>
					</div>

					<div class="form-group">
						<div class="col-xs-3 col-xs-offset-3">
							<button class="btn btn-primary">
								{% trans "Search" %}
							</button>
						</div>
					</div>
				</form>
			</div>
		</div>

		<div class="panel panel-default">
			<div class="panel-heading">
				{{ base.pager_count(pager.item_count) }}
				<div class="pull-right">
					<a href="/financial/account/transaction?action=automatic_link">
						<i class="fa fa-magic"></i> {% trans "Automatic link" %}
					</a>
					-
					<a href="/financial/account/transaction?action=batch_link">
						<i class="fa fa-link"></i> {% trans "Batch link" %}
					</a>
				</div>
			</div>
			<div class="panel-body">
			{% for transaction in pager.items %}
				{% if loop.first %}
					<table class="table table-hover table-striped table-condensed table-responsive">
					<thead>
						<tr>
							<th>#</th>
							<th>{{ pager.create_header('Date'|trans, 'bank_account_statement_transaction.date')|raw }}</th>
							<th width="180">{{ pager.create_header('Bank Account Statement'|trans, 'bank_account_statement.id')|raw }}</th>
							<th>{{ pager.create_header('Amount'|trans, 'amount')|raw }}</th>
							<th width="40%">{{ pager.create_header('Message'|trans, 'message')|raw }}</th>
							<th>{{ pager.create_header('To/From'|trans, 'other_account_name')|raw }}</th>
							<th width="20">&nbsp;</th>
						</tr>
					</thead>
					<tbody>
				{% endif %}

				<tr {% if not transaction.balanced %}class="warning"{% endif %}>
					<td>{{ transaction.id }}</td>
					<td>{{ transaction.date|date }}</td>
					<td>{{ transaction.bank_account_statement.sequence }}</td>
					<td>&euro;{{ transaction.amount }}</td>
					<td>{{ transaction.get_message|truncate(80) }}</td>
					<td>{{ transaction.other_account_name }}</td>
					<td>
						<a href="/financial/account/transaction?action=edit&id={{ transaction.id }}" title="">
							<span class="glyphicon glyphicon-pencil"></span>
						</a>
					</td>
				</tr>

				{% if loop.last %}
					</tbody>
					</table>

					{{ pager.links|raw }}
				{% endif %}

			{% else %}

				<p><em>{% trans "No bank accounts found." %}</em></p>

			{% endfor %}
			</div>
		</div>
	{% endif %}

{% endblock content %}
