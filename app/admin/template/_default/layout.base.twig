<!doctype html>
<html class="no-js" lang="{{ env.session.language.name_short }}">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="description" content="">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<title>{% if settings.company is not empty %}{{ settings.company }} - {% endif %}Tiny Invoice</title>

	<link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css" type="text/css" media="handheld, all">
	<link rel="stylesheet" href="/flatpickr/dist/flatpickr.min.css" type="text/css" media="handheld, all">
	<link rel="stylesheet" href="/select2/dist/css/select2.min.css" type="text/css">
	<link rel="stylesheet" href="/select2-bootstrap-5-theme/dist/select2-bootstrap-5-theme.min.css" />
	<link rel="stylesheet" href="/font-awesome/css/font-awesome.min.css">
	<link rel="stylesheet" href="/codemirror/lib/codemirror.css">
	<link rel="stylesheet" href="/style.css">

	<script type="text/javascript" src="/jquery/dist/jquery.min.js"></script>
	<script type="text/javascript" src="/feather-icons/dist/feather.min.js"></script>
	<script type="text/javascript" src="/flatpickr/dist/flatpickr.min.js"></script>
	<script type="text/javascript" src="/select2/dist/js/select2.full.min.js"></script>

	<script type="text/javascript" src="/moment/min/moment.min.js"></script>
	<script type="text/javascript" src="/tigron-confirm-modal/js/bootstrap.confirm-modal.js"></script>
	<script type="text/javascript" src="/jquery-zoom/jquery.zoom.min.js"></script>
	<script type="text/javascript" src="/handlebars/handlebars.min.js"></script>
	<script type="text/javascript" src="/autosize/dist/autosize.min.js"></script>
	<script type="text/javascript" src="/jquery-ui/jquery-ui.min.js"></script>
	<script type="text/javascript" src="/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script type="text/javascript" src="/jquery-mask-plugin/dist/jquery.mask.min.js"></script>
	<script type="text/javascript" src="/urijs/src/URI.js"></script>

