{% extends "_default/modal.base.twig" %}

{% block header %}{% trans "Select supplier" %}{% endblock header %}

{% block body %}

	<form class="form-horizontal form-condensed" method="post" action="?action=edit_supplier&id={{ document.id }}" id="form-supplier-select-modal">
		<div class="row mb-1 mb-md-3">
			<label class="col-2 col-form-label text-end">{% trans "Customer" %}</label>
			<div class="col-9">
				<select name="document[supplier_id]" class="form-select autocomplete_supplier"></select>
			</div>
		</div>
	</form>

	<script type="text/javascript">
	$('.autocomplete_supplier').select2({
		theme: "bootstrap-5",
		closeOnSelect: true,
		minimumResultsForSearch: 0,
		ajax: {
			url: '/administrative/supplier?action=ajax_search',
			dataType: 'json',
		// Additional AJAX parameters go here; see the end of this chapter for the full code of this example
		},
	});
	</script>


{% endblock body %}

{% block footer %}
	<button type="submit" class="btn btn-primary" form="form-supplier-select-modal" id="btn_submit_supplier">{% trans "Save" %}</button>
	<button type="button" class="btn btn-default" data-dismiss="modal" id="autocomplete_supplier_btn">{% trans "Cancel" %}</button>
{% endblock footer %}
