{% extends "_default/layout.base.twig" %}

{% import '_default/macro.base.twig' as base %}

{% block content %}

{% if action == 'edit' %}
	<div class="row">
		<div class="col">
			<h4>{% trans "Roles" %}</h4>
		</div>
		<div class="col">
			<div class="float-end">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="/administrative/role">
								{% trans "Roles" %}
							</a>
						</li>
						<li class="breadcrumb-item active">
							{% trans "Edit role" %} {{ role.name }}
						</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>

	<form class="form form-horizontal form-condensed mb-3" method="post" action="/administrative/role?action=edit&id={{ role.id }}">
		<div class="card">
			<div class="card-header">{% trans "Role details" %}</div>
			<div class="card-body">
				{% if env.sticky_session.message == 'updated' %}
					{{ base.alert('success', 'Role permissions successfully updated'|trans) }}
				{% endif %}
				<div class="row mb-1 mb-md-3">
					<label class="col-form-label col-12 col-md-3 text-md-end">{% trans "Name" %}</label>
					<div class="col-9"><input type="text" name="role[name]" class="form-control" value="{{ role.name }}" /></div>
				</div>

				<div class="row mb-1 mb-md-3">
					<div class="offset-md-3 mt-2 mt-md-0">
						<button type="submit" class="btn btn-primary">{% trans "Save" %}</button>
					</div>
				</div>
			</div>
		</div>
	</form>


	<form class="form-horizontal" method="post" action="/administrative/role?action=edit_permissions&id={{ role.id }}">
		<div class="card">
			<div class="card-header">{% trans "Permissions" %}</div>
			<div class="card-body">
				{% if env.sticky_session.message == 'updated_permissions' %}
					{{ base.alert('success', 'Role permissions successfully updated'|trans) }}
				{% endif %}
				<div class="row mb-1 mb-md-3">
					<label class="col-form-label col-12 col-md-3 text-md-end">{% trans "Select permissions" %}</label>
					<div class="col-md-9 col-12">
						<select name="permission_ids[]" class="form-control select2" multiple="multiple">
							{% for permission in permissions %}
								<option value="{{ permission.id }}" {% if role.has_permission(permission) %}selected{% endif %}>
									{% if permission.identifier == "admin.user" %}
										{% trans "Users" %}
									{% elseif permission.identifier == 'admin.customer' %}
										{% trans "Customers" %}
									{% elseif permission.identifier == 'admin.supplier' %}
										{% trans "Suppliers" %}
									{% elseif permission.identifier == 'admin.export' %}
										{% trans "Exports" %}
									{% elseif permission.identifier == 'admin.invoice' %}
										{% trans "Invoices" %}
									{% elseif permission.identifier == 'admin.creditnote' %}
										{% trans "Credit notes" %}
									{% elseif permission.identifier == 'admin.invoice_queue' %}
										{% trans "Invoice Queue" %}
									{% elseif permission.identifier == 'admin.invoice_queue_recurring' %}
										{% trans "Recurring Invoice Queue" %}
									{% elseif permission.identifier == 'admin.product_type' %}
										{% trans "Product definitions" %}
									{% elseif permission.identifier == 'admin.document' %}
										{% trans "Document management" %}
									{% elseif permission.identifier == 'admin.setting' %}
										{% trans "Settings" %}
									{% elseif permission.identifier == 'admin.financial' %}
										{% trans "Financial" %}
									{% endif %}
								</option>
							{% endfor %}
						</select>

					</div>
				</div>

				<div class="row mb-1 mb-md-3">
					<div class="offset-md-3 mt-2 mt-md-0">
						<button type="submit" class="btn btn-primary">{% trans "Save" %}</button>
					</div>
				</div>
			</div>
		</div>
	</form>

	<script type="text/javascript">
	$('select').select2({
	  theme: "bootstrap-5",
	  closeOnSelect: false
	});
	</script>

{% else %}

	<div class="row">
		<div class="col">
			<h4>{% trans "Roles" %}</h4>
		</div>
	</div>

	<form class="form-horizontal" method="post" action="/administrative/role">
	<div class="card mb-3">
		<div class="card-header">
			{% trans "Filter" %}
		</div>
		<div class="card-body">
			<div class="row mb-2 mb-md-3">
				<label class="col-form-label col-12 col-md-2 text-md-end">{% trans "Search" %}</label>
				<div class="col-9">
					<input type="text" class="form-control" name="search" value="{{ pager.get_search() }}"/>
				</div>
			</div>

			<div class="row mb-md-1 mb-md-2">
				<div class="offset-md-2">
					<button class="btn btn-primary" type="submit">
						{% trans "Search" %}
					</button>
				</div>
			</div>
		</div>
	</div>
	</form>

	{% include "administrative/role/modal.new.twig" with {"id": "new_role"} %}

	<div class="card">
		<div class="card-header">
			<div class="pull-right">
				<a href="#new_role" data-bs-toggle="modal">
					<i data-feather="plus"></i>
					{% trans "Add role" %}
				</a>
			</div>
			{{ base.pager_count(pager.item_count) }}
		</div>
		<div class="card-body">
			{% for role in pager.items %}
				{% if loop.first %}
				<table class="table table-striped table-hover table-condensed rtab">
					<thead>
						<tr>
							<th>{{ pager.create_header('Name'|trans, 'name')|raw }}</th>
							<th width="20">&nbsp;</th>
							<th width="20">&nbsp;</th>
						</tr>
					</thead>
					<tbody>
				{% endif %}
				<tr>
					<td>{{ role.name }}</td>

					<td>
						<a href="/administrative/role?id={{ role.id }}&action=edit">
							<i data-feather="edit"></i>
						</a>
					</td>
					<td>
						<a href="/administrative/role?id={{ role.id }}&action=delete" data-confirm-title="{% trans "Please confirm" %}" data-confirm-message="{% trans "Are you sure you want to delete role" %} {{ role.name }}?">
							<i data-feather="trash-2"></i>
						</a>
					</td>
				</tr>

				{% if loop.last %}
					</tbody>
				</table>
				{{ pager.links|raw }}
				{% endif %}
			{% else %}

				<p><em>{% trans "No customers found." %}</em></p>

			{% endfor %}
		</div>
	</div>

{% endif %}

{% endblock content %}
